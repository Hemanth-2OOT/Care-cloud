<script>
function applyFilters(age) {
  const filters = document.getElementById("filters");

  if (age === "6-9") {
    filters.innerHTML = `
      <div class="filter-box"><span>Emotional Safety</span><strong>Very High</strong></div>
      <div class="filter-box"><span>Allowed Content</span><strong>Positive Only</strong></div>
      <div class="filter-box"><span>Toxicity Tolerance</span><strong>0%</strong></div>
      <div class="filter-box"><span>Parent Alerts</span><strong>Immediate</strong></div>
    `;
  } else if (age === "10-13") {
    filters.innerHTML = `
      <div class="filter-box"><span>Emotional Safety</span><strong>High</strong></div>
      <div class="filter-box"><span>Allowed Content</span><strong>Mild Conversations</strong></div>
      <div class="filter-box"><span>Toxicity Tolerance</span><strong>Very Low</strong></div>
      <div class="filter-box"><span>Parent Alerts</span><strong>Repeated Harm</strong></div>
    `;
  } else {
    filters.innerHTML = `
      <div class="filter-box"><span>Emotional Safety</span><strong>Moderate</strong></div>
      <div class="filter-box"><span>Allowed Content</span><strong>Open Conversations</strong></div>
      <div class="filter-box"><span>Toxicity Tolerance</span><strong>Low</strong></div>
      <div class="filter-box"><span>Parent Alerts</span><strong>High Risk Only</strong></div>
    `;
  }
}

function saveSettings() {
  document.getElementById("success").style.display = "block";
}
</script>

